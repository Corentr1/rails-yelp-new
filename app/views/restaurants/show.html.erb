<h1 class="display-6" style="text-align: center;"><%= @restaurant.name %></h1>


<div class="card">
  <div class="card-header">
    <%= @restaurant.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.category %></h5>
    <p class="card-text"><%= @restaurant.address %></p>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  </div>
</div>

<ul class="list-group list-group-flush">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>   <%= 'ðŸ†'*review.rating %></li>
  <% end %>
</ul>
